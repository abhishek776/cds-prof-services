<div class="ui medium top menu fixed" id="my-menu">
  <%=link_to image_tag("header-logo.png", border: 0, class:"header-logo"), home_path %>
  <div class="right menu" style="margin-right: 0px">
    <%=link_to image_tag("browse-dogs.png", class:"browse-dogs"), dogs_path, :id => "To All Dogs"  %>
  
    <% if current_user %>
      <div class="ui dropdown item right_item">
        <a class="name-text"><%= current_user.first_name + " " + current_user.last_name %></a>
        <%= image_tag current_user.image, class: "menu-pic" %>
        <div class="menu">
          <div class="item menu_item"><%= link_to "My Profile", user_path(current_user), class: "item"%></div>
          <div class="item menu_item"><%= link_to "Log Out", '/logout', class: "item"%></div>
        </div>
      </div>    
    <% else %>
      <%= link_to "/auth/facebook", id: "log_in", class: "item login" do %>
          <button class="ui facebook small button fb-login">
          <i class="facebook icon"></i>
          Login
          </button>
      <% end %>
    <% end %>
  </div>
</div>