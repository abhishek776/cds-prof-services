<div id="dogs" class="ui grid dog_partial">
  <div class="seven wide column">
    <% if dog.image.file? %>
      <a href=<%=dog_path(dog.id)%>>
        <%= image_tag dog.image, :class => "ui image" %>
      </a>
    <% else %>
      <%= image_tag "default_dog.jpg", :class => "ui image" %>
    <% end %>
  </div>
  <div class="nine wide column">
    <h3 class="ui header" style="margin-bottom:5px">
      <a href="<%= dog_path(dog.id) %>" class="green-button"> <%= dog.name %></a>
      <% if @current_user.id == dog.user_id %>
        <a class="right floated green-button" href=<%=edit_dog_path(dog.id)%> id="add_dog_button">
            <i class="edit icon"></i>
        </a>
      <% end %>
      <div class="sub header">
        <span class="category"><i class="heart icon"></i><%= dog.age_caption %></span>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <span class="category"><i class="calendar icon"></i> <%= dog.events.count %> Events</span>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <span class="category"><i class="star icon"></i> <%= dog.stars.count %> Stars</span>
      </div>
    </h3>
    
    <div class="content">
      <div class="description gray-text" style="font-size:14px">
        <% unless dog.description.nil? or  dog.description == "" %>
          <span class="green-text">Motto:</span>
          <%= dog.motto %>
        <%end%>
      </div>
      <div class="description gray-text" style="font-size:14px">
        <% unless dog.description.nil? or  dog.description == "" %>
          <span class="green-text">Description:</span>
          <%= dog.description %>
        <%end%>
      </div>
      <div class="description gray-text" style="font-size:14px">
        <% unless dog.description.nil? or  dog.description == "" %>
          <span class="green-text">Availability:</span>
          <%= dog.availability %>
        <%end%>
      </div>
    </div>
  </div>
</div>